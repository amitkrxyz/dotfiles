// -*- mode: jsonc -*-
{
    // "layer": "top", // Waybar at top layer
    // "position": "bottom", // Waybar position (top|bottom|left|right)
    // "height": 10, // Waybar height (to be removed for auto height)
    // "width": 1280, // Waybar width
    "output": "eDP-1",
    "spacing": 4, // Gaps between modules (4px)
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
        "wlr/taskbar",
        "hyprland/window",
        "hyprland/submap"
    ],
    "modules-center": [
        "clock",
        "custom/runcat",
    ],
    "modules-right": [
        "keyboard-state",
        "tray",
        "privacy",
        "idle_inhibitor",
        // "power-profiles-daemon",
        "backlight",
        "pulseaudio",
        "network",
        "cpu",
        "memory",
        "temperature",
        "battery",
    ],
    "custom/runcat": {
        "exec": "~/myhome/git-repo/polycat/polycat",
    },
    // Modules configuration
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 16,
        "icon-theme": "HighContrast",
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "fullscreen",
        "on-click-right": "close",
        "active-first": true,
        "ignore-list": [
            "Alacritty"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },
    "privacy": {
	"icon-spacing": 4,
        "icon-size": 18,
        "transition-duration": 250,
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
            // {
            //     "type": "audio-out",
            //     "tooltip": true,
            //     "tooltip-icon-size": 24
            // },
            // {
            //     "type": "audio-in",
            //     "tooltip": true,
            //     "tooltip-icon-size": 24
            // }
        ]
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "ÔÑ†",
            "2": "Ôâ®",
            "3": "ÔÑ°",
            "4": "ÔÖÅ",
            "magic": "Óãä",
            // "active": "ÔÜí",
            "default": "ÔÑë"
            // "default": " "
        },
        "show-special": true,
        "on-scroll-up": "hyprctl dispatch workspace e-1",
        "on-scroll-down": "hyprctl dispatch workspace e+1",
        "on-click": "nwg-drawer",
        "persistent-workspaces": {
            "HDMI-A-1": 1,
            "eDP-1": 4
        }
    },
    "hyprland/window": {
        "format": "{title}",
        "icon": false,
    },
    "keyboard-state": {
        "capslock": true,
        "numlock": false,
        "format": "{icon}",
        "format-icons": {
            "locked": "ÔÄ£",
            "unlocked": ""
        }
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}{artist} - {album} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S}) ‚∏®{songPosition}|{queueLength}‚∏© {volume}% ÔÄÅ",
        "format-disconnected": "Disconnected ÔÄÅ",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped ÔÄÅ",
        "unknown-tag": "N/A",
        "interval": 5,
        "consume-icons": {
            "on": "ÔÉÑ "
        },
        "random-icons": {
            "off": "<span color=\"#f53c3c\">ÔÅ¥</span> ",
            "on": "ÔÅ¥ "
        },
        "repeat-icons": {
            "on": "ÔÄû "
        },
        "single-icons": {
            "on": "ÔÄû1 "
        },
        "state-icons": {
            "paused": "ÔÅå",
            "playing": "ÔÅã"
        },
        "tooltip-format": "MPD (connected)",
        "tooltip-format-disconnected": "MPD (disconnected)"
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "Ôû∂",
            "deactivated": "Ôû∂"
        }
    },
    "tray": {
        // "icon-size": 21,
        "spacing": 10
    },
    "clock": {
        "format": "{:%b %d %H:%M:%S}",
        "interval": 1,
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        // "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "interval": 1,
        "format": "{max_frequency}GHz Ôãõ",
        // "tooltip": false
    },
    "memory": {
        "format": "{}% Ôî∏"
    },
    "temperature": {
        // "thermal-zone": 2,
        "hwmon-path": [
            "/sys/class/hwmon/hwmon0/temp1_input",
            "/sys/class/hwmon/hwmon1/temp1_input",
            "/sys/class/hwmon/hwmon2/temp1_input",
            "/sys/class/hwmon/hwmon3/temp1_input"
        ],
        "critical-threshold": 70,
        "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "tooltip-format": "Temperature ÔÅ≠"
    },
    "backlight": {
        // "device": "acpi_video1",
        "scroll-step": 5,
        "tooltip-format": "Brightness Ôå∏",
        "format": "{percent}% {icon}",
        "format-icons": "ÔÜÖ",
        // "format-icons": ["üåë", "üåò", "üåó", "üåñ", "üåï"],
    },
    "battery": {
        "states": {
            "warning": 40,
            "critical": 20
        },
        "format": "{capacity}% {icon}",
        "format-full": "{capacity}% {icon}",
        "format-charging": "{capacity}% Ôóß",
        "format-plugged": "{capacity}% Ôá¶",
        "format-alt": "{power}W ÔÉß",
        "on-click-right": "wlogout",
        // "format-good": "", // An empty format will hide the module
        // "format-warning": "{capacity}% ü™´",
        // "format-full": "",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
        "tooltip-format": "{time}"
    },
    "battery#bat2": {
        "bat": "BAT2"
    },
    "power-profiles-daemon": {
      "format": "{icon}",
      "tooltip-format": "Power profile",
      // "tooltip": true,
      "format-icons": {
        "default": "ÔÉß",
        "performance": "ÔÉß",
        "balanced": "Ôâé",
        "power-saver": "ÔÅ¨"
      }
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        // "format-wifi": "{essid} ({signalStrength}%) Ôá´",
        // "format-ethernet": "{ipaddr}/{cidr} Ôûñ",
        // "tooltip-format": "{ifname} via {gwaddr} Ôûñ",
        // "format-linked": "{ifname} (No IP) Ôûñ",
        "format-wifi": "{bandwidthDownBytes} Ôá´ ",
        "format-ethernet": "{bandwidthDownBytes} Ôûñ",
        "format": "{bandwidthDownBytes} ÔÅ£",
        "format-disconnected": "Network ‚ö†",
        "format-alt": "{ifname}: {ipaddr}/{cidr}",
        "tooltip-format": "{essid} ({signalStrength}%) {ipaddr}/{cidr}",
        "interval": 1
    },
    "pulseaudio": {
        "scroll-step": 5, // %, can be a float
        "format": "{volume}% {icon}",
        "format-bluetooth": "Ôäî {volume}% {icon}",
        "format-bluetooth-muted": "Ôö© {icon} Ôäî",
        "format-muted": "Ôö©",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "Mute ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "tooltip-format": "{format_source}",
        "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
        "on-click-right": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
